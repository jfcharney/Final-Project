<div class="page-header">
  <h1>
    Funds
    <a href="/funds/new" class="btn btn-lg btn-success">New Fund</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Fund name</th>
        <th>Fund family</th>
        <th>Asset class</th>
        <th>Actions</th>
      </tr>

      <% @funds.each do |fund| %>
      <tr>
        <td><%= fund.fund_name %></td>
        <td><%= fund.fund_family %></td>
        <td><%= fund.asset_class %></td>

        <td>
          <a href="/funds/<%= fund.id %>" class="btn btn-primary">Show</a>
          <a href="/funds/<%= fund.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_fund/<%= fund.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
